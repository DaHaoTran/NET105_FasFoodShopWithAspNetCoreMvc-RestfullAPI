@model UI.Models.CustomerInformation
@{
    ViewData["Title"] = "Address register page";
    Layout = "_Layout";
}

<!-- register section -->
<div class="sub_page">
    <section class="contact_section position-relative layout_padding-bottom layout_padding-top"
             style="border: 2px solid none; border-radius: 20px; background-color: white; height: 700px">
        <div class="container-fluid">
            <h2>
                Đăng ký địa chỉ nhận hàng
            </h2>
            <div class="row">
                <div class="col-md-7">
                    <div class="form_container">
                        <form asp-action="AddressRegister" asp-controller="Home" method="post">
                            <input type="text" asp-for="street" required placeholder="Số nhà, tên đường" />
                            <div class="row mt-2">
                                <div class="col-6">
                                    <label class="form-label">Chọn tỉnh / thành phố</label>
                                    <select required class="form-control" asp-for="city">
                                        <option value="{{city}}">{{city}}</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Chọn quận</label>
                                    <select required class="form-control" style="overflow-y: auto" asp-for="district">
                                        <option ng-repeat="x in district" value="{{x.name}}">{{x.name}}</option>
                                    </select>
                                </div>
                            </div>
                            <input asp-for="CustomerName" type="text" required placeholder="Tên người nhận hàng">
                            <span asp-validation-for="CustomerName"></span>
                            <input asp-for="PhoneNumber" type="text" min="10" required placeholder="Số điện thoại">
                            <span asp-validation-for="PhoneNumber"></span>
                            <button type="submit">Create</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="contact_box">
                        <a>
                            <div class="img-box">
                                <img src="~/images/location.png" alt="">
                            </div>
                            <h6>
                                Phường Trung Mỹ Tây, Quận 12, TP.HCM
                            </h6>
                        </a>
                        <a>
                            <div class="img-box">
                                <img src="~/images/call.png" alt="">
                            </div>
                            <h6>
                                (+84) 324961023
                            </h6>
                        </a>
                        <a>
                            <div class="img-box">
                                <img src="~/images/envelope.png" alt="">
                            </div>
                            <h6>
                                haotgps30117@fpt.edu.vn
                            </h6>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- end register section -->
<!-- footer section -->
<section class="container-fluid footer_section position-relative">
    <div class="container text-center footer_section" style="color: white">
        NET105-SD18318-PS30117-TranGiaHao-ASM
    </div>
</section>
<!-- footer section -->
@{
    bool showMessage = false;
    if (TempData["Newbie"] != null)
    {
        showMessage = (bool)TempData["Newbie"]!;
    }
}

@if (showMessage)
{
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire("Chào mừng người mới, Hãy tạo một địa chỉ cho lần đầu đặt hàng nào !");
        })
    </script>
}